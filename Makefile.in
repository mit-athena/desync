# $Id: Makefile.in,v 1.3 1999-10-19 20:23:21 danw Exp $

SHELL=/bin/sh
VPATH=@srcdir@
INSTALL=@INSTALL@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
srcdir=@srcdir@
top_srcdir=@top_srcdir@
prefix=@prefix@
exec_prefix=@exec_prefix@
mandir=@mandir@
sysconfdir=@sysconfdir@
lsbindir=@lsbindir@

CC=@CC@
CPPFLAGS=@CPPFLAGS@
CFLAGS=@CFLAGS@ ${WARN_CFLAGS} ${ERROR_CFLAGS}
LDFLAGS=@LDFLAGS@
LIBS=@LIBS@
ALL_CFLAGS=-DSYSCONFDIR=\"${sysconfdir}\" ${CPPFLAGS} ${CFLAGS}

all: desync

desync: desync.o
	${CC} ${LDFLAGS} -o desync desync.o ${LIBS}

.c.o:
	${CC} -c ${ALL_CFLAGS} $<

check:

install:
	${top_srcdir}/mkinstalldirs ${DESTDIR}${lsbindir}
	${top_srcdir}/mkinstalldirs ${DESTDIR}${mandir}/man8
	${INSTALL_PROGRAM} -m 555 desync ${DESTDIR}${lsbindir}
	${INSTALL} -m 444 ${srcdir}/desync.8 ${DESTDIR}${mandir}/man8

clean:
	rm -f desync.o desync

distclean: clean
	rm -f config.cache config.log config.status Makefile
